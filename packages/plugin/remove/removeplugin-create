#!/bin/bash
#
# [Quick Box :: Remove create plugin]
#
# GITHUB REPOS
# GitHub _ packages  :   https://github.com/AetherFlow/AetherFlow_packages
# GitHub _ plugins   :   https://github.com/AetherFlow/AetherFlow_rutorrent-plugins
# LOCAL REPOS
# Local _ packages   :   /etc/AetherFlow/packages
# Local _ plugins    :   /etc/AetherFlow/rtplugins
# Author             :   McEveritts
# URL                :   https://AetherFlow.io
#
# AetherFlow Copyright (C) 2017 AetherFlow.io
# Licensed under GNU General Public License v3.0 GPL-3 (in short)
#
#   You may copy, distribute and modify the software as long as you track
#   changes/dates in source files. Any modifications to our software
#   including (via compiler) GPL-licensed code must also be made available
#   under the GPL along with build & install instructions.
#
source /opt/AetherFlow/packages/common.sh
OUTTO=$LOGFILE

function _removeplugin-create() {
  username=$(whoami);
  # LEGACY: rutorrent path no longer used
# rutorrent="/srv/rutorrent/";
  echo "Uninstalling the create plugin ... " >>"${OUTTO}" 2>&1;
  PLUGIN="create"
    for i in $PLUGIN; do
      rm -rf "${rutorrent}plugins/$i"
    done
  sleep 5

  echo "Create Plugin Uninstall Complete!" >>"${OUTTO}" 2>&1;
  
  sleep 5
  echo >>"${OUTTO}" 2>&1;
  echo >>"${OUTTO}" 2>&1;
  echo "Close this dialog box to refresh your browser" >>"${OUTTO}" 2>&1;

    exit
}

_removeplugin-create

