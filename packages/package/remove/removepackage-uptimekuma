#!/bin/bash
#
# [AetherFlow :: Remove uptimekuma]
#
set -e

LOGFILE="/opt/AetherFlow/logs/installer.log"
log() { echo "[$(date '+%Y-%m-%d %H:%M:%S')] [remove-uptimekuma] $1" | tee -a "$LOGFILE"; }

log "Stopping uptimekuma..."
systemctl stop uptime-kuma; systemctl disable uptime-kuma

log "Removing uptimekuma files and configuration..."
rm -rf /opt/uptime-kuma /etc/systemd/system/uptime-kuma.service /etc/apache2/sites-enabled/uptimekuma.conf; userdel uptimekuma 2>/dev/null

systemctl daemon-reload 2>/dev/null
service apache2 reload 2>/dev/null
rm -f /install/.uptimekuma.lock

log "uptimekuma has been completely removed."