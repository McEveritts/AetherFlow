#!/bin/bash
#
# [AetherFlow :: Remove homeassistant]
#
set -e

LOGFILE="/opt/AetherFlow/logs/installer.log"
log() { echo "[$(date '+%Y-%m-%d %H:%M:%S')] [remove-homeassistant] $1" | tee -a "$LOGFILE"; }

log "Stopping homeassistant..."
systemctl stop home-assistant@homeassistant; systemctl disable home-assistant@homeassistant

log "Removing homeassistant files and configuration..."
rm -rf /home/homeassistant /etc/systemd/system/home-assistant@homeassistant.service /etc/apache2/sites-enabled/homeassistant.conf; userdel homeassistant 2>/dev/null

systemctl daemon-reload 2>/dev/null
service apache2 reload 2>/dev/null
rm -f /install/.homeassistant.lock

log "homeassistant has been completely removed."