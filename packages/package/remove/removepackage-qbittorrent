#!/bin/bash
#
# [AetherFlow :: Remove qbittorrent]
#
source /opt/AetherFlow/packages/common.sh
set -e

LOGFILE="/opt/AetherFlow/logs/installer.log"
log() { echo "[$(date '+%Y-%m-%d %H:%M:%S')] [remove-qbittorrent] $1" | tee -a "$LOGFILE"; }

log "Stopping qbittorrent..."
systemctl stop qbittorrent; systemctl disable qbittorrent

log "Removing qbittorrent files and configuration..."
apt-get remove -y qbittorrent-nox >/dev/null 2>&1; rm -rf /etc/systemd/system/qbittorrent.service /etc/apache2/sites-enabled/qbittorrent.conf; userdel qbittorrent 2>/dev/null

systemctl daemon-reload 2>/dev/null
service apache2 reload 2>/dev/null
rm -f /install/.qbittorrent.lock

log "qbittorrent has been completely removed."