#!/bin/bash
#
# [AetherFlow :: Remove prowlarr]
#
source /opt/AetherFlow/packages/common.sh
set -e

LOGFILE="/opt/AetherFlow/logs/installer.log"
log() { echo "[$(date '+%Y-%m-%d %H:%M:%S')] [remove-prowlarr] $1" | tee -a "$LOGFILE"; }

log "Stopping prowlarr..."
systemctl stop prowlarr; systemctl disable prowlarr

log "Removing prowlarr files and configuration..."
rm -rf /opt/Prowlarr /var/lib/prowlarr /etc/systemd/system/prowlarr.service /etc/apache2/sites-enabled/prowlarr.conf; userdel prowlarr 2>/dev/null

systemctl daemon-reload 2>/dev/null
service apache2 reload 2>/dev/null
rm -f /install/.prowlarr.lock

log "prowlarr has been completely removed."