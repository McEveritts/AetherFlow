#
# This file MUST be edited with the 'visudo' command as root.
#
# Please consider adding local content in /etc/sudoers.d/ instead of
# directly modifying this file.
#
# See the man page for details on how to write a sudoers file.
#
Defaults	env_reset
Defaults	mail_badpass
Defaults secure_path="/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin:/usr/local/bin/AetherFlow:/usr/local/bin/AetherFlow/system:/usr/local/bin/AetherFlow/package:/usr/local/bin/AetherFlow/package/install:/usr/local/bin/AetherFlow/package/remove:/usr/local/bin/AetherFlow/plugin:/usr/local/bin/AetherFlow/plugin/install:/usr/local/bin/AetherFlow/plugin/remove"
Defaults  env_keep -="HOME"

# Host alias specification

# User alias specification

# Cmnd alias specification
Cmnd_Alias   CLEANMEM = /usr/local/bin/AetherFlow/system/clean_mem, /proc/sys/vm/drop_caches
Cmnd_Alias   SYSCMNDS = /usr/local/bin/AetherFlow/system/clean_log, /usr/local/bin/AetherFlow/system/set_interface, /usr/local/bin/AetherFlow/system/setdisk, /usr/local/bin/AetherFlow/system/showspace, /usr/local/bin/AetherFlow/system/updateAetherFlow, /usr/local/bin/AetherFlow/system/lang/langSelect-*, /usr/local/bin/AetherFlow/system/theme/themeSelect-*, /usr/local/bin/AetherFlow/system/install_ffmpeg, /usr/local/bin/AetherFlow/system/quickVPN, /usr/local/bin/AetherFlow/system/box
Cmnd_Alias   PLUGINCMNDS = /usr/local/bin/AetherFlow/plugin/install/installplugin-*, /usr/local/bin/AetherFlow/plugin/remove/removeplugin-*
Cmnd_Alias   PACKAGECMNDS = /usr/local/bin/AetherFlow/package/install/installpackage-*, /usr/local/bin/AetherFlow/package/remove/removepackage-*
Cmnd_Alias   GENERALCMNDS = /usr/bin/ifstat, /usr/bin/vnstat, /usr/sbin/repquota, /usr/bin/reload, /etc/init.d/apache2 restart, /usr/bin/pkill, /usr/bin/killall, /bin/systemctl

# User privilege specification
root	ALL=(ALL:ALL) ALL
www-data     ALL = (ALL) NOPASSWD: CLEANMEM, SYSCMNDS, PLUGINCMNDS, PACKAGECMNDS, GENERALCMNDS

# Members of the admin group may gain root privileges
%admin ALL=(ALL) ALL

# Allow members of group sudo to execute any command
%sudo	ALL=(ALL:ALL) ALL

# See sudoers(5) for more information on "#include" directives:

#includedir /etc/sudoers.d
